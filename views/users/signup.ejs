<% layout("layouts/boilerplate")%> 

<div class="row mt-3" style="background-image:url('/bgimage2.jpg') !important"> 
    <h1 class="col-6 offset-3">SignUp on incogNex</h1>
    <div class="col-6 offset-3">
        <form action="/signup" method="POST" class="needs-validation" nonvalidate>
           <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input
            name="username"
            id="username"
            type="text"
            class="form-control"
            required>
            <div class="valid-feedback">Looks good!</div>
           </div>

           <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input
            name="email"
            id="email"
            type="text"
            class="form-control"
            >
            
           </div>

           <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input
            name="password"
            id="password"
            type="text"
            class="form-control"
            required>
            
           </div>
           <button class="btn btn-success">SignUp</button>
        </form>
    </div>
</div>